@model IEnumerable<Season>
@{
    ViewData["Title"] = "Seasons Page";
}

<div class="container mt-4">
    <div class="row g-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="season-card shadow-lg border-0 rounded-4 overflow-hidden">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary fw-bold">@item.Title</h5>
                        <h6 class="card-text text-muted">📅 Season Number: <span class="text-dark">@item.SeasonNumber</span></h6>
                        <h6 class="card-text text-muted">📆 Release Year: <span class="text-dark">@item.ReleaseYear</span></h6>
                        <h6 class="card-text text-muted">📺 TV Series: <span class="text-dark">@item.TvSeries.Title</span></h6>
                        <h6 class="card-text text-muted"> Author: <span class="text-dark">@item.TvSeries.Author</span></h6>


                        <div class="d-flex flex-column flex-md-row justify-content-center gap-2 mt-3">
                           

                            <a asp-area="Customer" asp-controller="Episode" asp-action="AllEpisode" asp-route-Id="@item.Id"
                               class="btn btn-outline-secondary fw-bold shadow-sm flex-fill">🎬 All Episodes</a>
                        </div>
                    </div>
                </div>
            </div> 
        }
    </div>
</div>

<style>
    /* تحسين تصميم الكارد */
    .season-card {
        background: #fff;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        /* تأثير عند تمرير الماوس على الكارد */
        .season-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
        }

    /* تحسين تصميم الأزرار */
    .btn {
        transition: all 0.3s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    /* تحسين العناوين */
    .card-title {
        font-size: 1.4rem;
    }

    /* تحسين النصوص */
    .card-text {
        font-size: 1rem;
    }
</style>
