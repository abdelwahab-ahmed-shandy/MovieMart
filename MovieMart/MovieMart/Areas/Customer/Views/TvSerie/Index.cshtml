@model IEnumerable<TvSeries>

@{
    ViewData["Title"] = "TV-Series Page";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">📺 TV Series</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrEmpty(item.ImgUrl))
                    {
                        <img src="~/Assets/Customer/TvSeries/@item.ImgUrl" class="card-img-top" alt="@item.Title" style="height: 300px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top d-flex align-items-center justify-content-center bg-secondary text-white" style="height: 300px;">
                            No Image
                        </div>
                    }

                    <div class="card-body">
                        <h5 class="card-title fw-bold">@item.Title</h5>
                        <p class="card-text text-muted">
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                @item.Description
                            }
                            else
                            {
                                <span>No description available.</span>
                            }
                        </p>
                        <p class="mb-1"><strong>📅 Release Year:</strong> @item.ReleaseYear</p>
                        <p class="mb-2"><strong>⭐ Rating:</strong> @(item.Rating ?? 0)/10</p>

                        <a asp-area="Customer" asp-controller="Season" asp-action="AllSeasons" asp-route-Id="@item.Id"
                           class="btn btn-outline-primary fw-bold shadow-sm w-100">🎬 View Seasons</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
