@model Movie
@{
    ViewData["Title"] = "More Movie Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="image-container">
                    <img src="~/Assets/Customer/MoviesPhoto/@Model.ImgUrl" class="movie-img" alt="@Model.Title">
                </div>

                <div class="card-body d-flex flex-column">
                    <h3 class="card-title text-primary fw-bold">@Model.Title</h3>
                    <p class="card-text text-muted">@Model.Description</p>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Price:</strong>
                            <span class="text-success fw-semibold">@Model.Price.ToString("C")</span>
                        </li>
                        <li class="list-group-item"><strong>Author:</strong> @Model.Author</li>
                        <li class="list-group-item"><strong>Duration:</strong> @Model.Duration</li>
                        <li class="list-group-item"><strong>Release Year:</strong> @Model.ReleaseYear</li>
                        <li class="list-group-item">
                            <strong>Rating:</strong>
                            <span class="text-warning fw-bold"> @(Model.Rating?.ToString("0.0") ?? "N/A") ⭐</span>
                        </li>
                        <li class ="list-group-item"><strong>Author:</strong> @Model.Category.Name</li>
                    </ul>

                    <div class="d-flex flex-column flex-md-row justify-content-between gap-2 mt-4">
                        <a asp-area="" asp-controller="" asp-action="" asp-route-Id=""
                           class="btn btn-primary fw-bold shadow-sm flex-fill">🎟️ Book Movie</a>

                        <a asp-area="Customer" asp-controller="Movie" asp-action="Index"
                           class="btn btn-outline-primary fw-bold shadow-sm flex-fill">🎬 More Movies</a>

                        <a asp-area="Customer" asp-controller="Category" asp-action="Index"
                           class="btn btn-outline-secondary fw-bold shadow-sm flex-fill">📂 Go To Categories</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* تحسين حاوية الصورة */
    .image-container {
        position: relative;
        width: 100%;
        max-height: 500px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        padding: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

    /* تحسين الصورة */
    .movie-img {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: cover;
        border-radius: 12px;
        transition: transform 0.4s ease-in-out, filter 0.3s ease-in-out;
    }

    /* تأثير عند تمرير الماوس */
    .image-container:hover .movie-img {
        transform: scale(1.05);
        filter: brightness(1.2);
    }

    /* فقاعة التصنيف */
    .category-bubble {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(0, 0, 0, 0.8);
        color: #fff;
        padding: 5px 12px;
        font-size: 0.8rem;
        font-weight: bold;
        border-radius: 20px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
        opacity: 0;
        transform: scale(0.9);
        transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

    /* عند تمرير الماوس، تظهر الفقاعة */
    .image-container:hover .category-bubble {
        opacity: 1;
        transform: scale(1);
    }

    /* تحسين شكل الأزرار */
    .btn {
        transition: all 0.3s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
