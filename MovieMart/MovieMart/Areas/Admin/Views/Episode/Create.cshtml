@model Episode
@{
    ViewData["Title"] = "Create Episode";
}

<div class="container mt-3">
    <h2>Create New Episode</h2>
    <form asp-action="Create" >


        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" value="@Model.Title" required />
            <span asp-validation-for="Title" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label for="EpisodeNumber" class="form-label">Episode Number</label>
            <input asp-for="EpisodeNumber" type="number" class="form-control" value="@Model.EpisodeNumber" required />
            <span asp-validation-for="EpisodeNumber" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label for="Duration" class="form-label">Duration</label>
            <input asp-for="Duration" type="time" step="1" class="form-control" value="@(Model.Duration.ToString(@"hh\:mm\:ss"))" required />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="VideoUrl" class="form-label">Video Url</label>
            <input asp-for="Title" class="form-control" value="@Model.VideoUrl"  />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label class="form-label">Season Name</label>
            <select asp-for="SeasonId" class="form-control" asp-items="ViewBag.Seasons" required>
                <option value="">Select Season </option>
            </select>
            <span asp-validation-for="SeasonId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Create Season
            </button>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
