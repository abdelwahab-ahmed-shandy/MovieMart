@model Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container mt-3">
    <h2>Edit Movie</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Author" class="form-label">Author</label>
            <input asp-for="Author" class="form-control" required />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" class="form-control" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="ImgUrl" class="form-label">Current Image</label>
            @if (!string.IsNullOrEmpty(Model.ImgUrl))
            {
                <img src="~/Assets/Customer/MoviesPhoto/@Model.ImgUrl" alt="Movie Image" class="img-thumbnail" width="150" />
            }
            <input type="file" class="form-control mt-2" name="file" accept=".jpg, .jpeg, .png">
            <span class="text-danger" asp-validation-for="ImgUrl"></span>
        </div>

        <div class="mb-3">
            <label for="Duration" class="form-label">Duration</label>
            <input asp-for="Duration" type="time" step="1" class="form-control" value="@(Model.Duration.ToString(@"hh\:mm\:ss"))" required />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="ReleaseYear" class="form-label">Release Year</label>
            <input asp-for="ReleaseYear" type="number" class="form-control" required />
            <span asp-validation-for="ReleaseYear" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Rating" class="form-label">Rating</label>
            <input asp-for="Rating" type="number" class="form-control" step="0.1" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Category Name</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" required>
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
